<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DashboardTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomView" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomButton" parent="CustomView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomTextView" parent="CustomView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomEditView" parent="CustomView">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">#0077DA</item>
    </style>
</resources>
